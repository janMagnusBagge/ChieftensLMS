<h3>Mina Delade Filer</h3>


<div ng-controller="sharedFileMineController">
	<div class="panel panel-default">
		<div class="panel-body">
			<table class="table table-condensed">
				<tr>
					<th>Namn</th>
					<th>Kurs</th>
					<th>Datum</th>
					<th></th>
					<th></th>
				</tr>
				<tr ng-repeat="file in apiData.SharedFiles">
					<td>{{file.Name}}</td>
					<td><a href="~/Course/Details/{{file.CourseId}}">{{file.CourseName}}</a></td>
					<td>{{file.Date | dateFilter | date:'yyyy-MM-dd'}}</td>

					<td class="text-right"><a href="~/SharedFileApi/Download/{{file.Id}}" class="btn btn-success btn-sm">Ladda ner</a> <button type="button" class="btn btn-danger btn-sm" ng-click="Delete(file.Id)">Radera</button></td>
				</tr>
			</table>

		</div>
	</div>
</div>

<script src="~/Scripts/sharedFileControllers/sharedFileMineController.js"></script>
